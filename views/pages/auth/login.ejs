<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%= title %></title>

    <!-- Favicon -->
    <link
      rel="shortcut icon"
      href="<%= process.env.CDN %>assets/media/image/favicon.png"
    />

    <!-- Plugin styles -->
    <link
      rel="stylesheet"
      href="<%= process.env.CDN %>vendors/bundle.css"
      type="text/css"
    />

    <!-- App styles -->
    <link
      rel="stylesheet"
      href="<%= process.env.CDN %>assets/css/app.min.css"
      type="text/css"
    />
  </head>
  <body class="form-membership">

    <div class="form-wrapper">
      <!-- logo -->
      <div id="logo">
        <img
          class="logo"
          src="<%= process.env.CDN %>assets/media/image/logo.png"
          alt="image"
        />
        <img
          class="logo-dark"
          src="<%= process.env.CDN %>assets/media/image/logo-dark.png"
          alt="image"
        />
      </div>
      <!-- ./ logo -->

      <!-- <h5>Sign in</h5> -->

      <!-- form -->
      <form method="POST" action="/auth">
        <div class="invalid-feedback d-block">
          <%= error.invalidLogin ? error.invalidLogin : ''%>
        </div>
        <div class="form-group">
          <div class="invalid-feedback d-block">
            <%= error.username ? error.username : ''%>
          </div>
          <input
            type="text"
            name="username"
            class="form-control"
            placeholder="username"
            style="<%= error.username || error.invalidLogin ? 'border-color: #dc3545' : ''%>"
          />
        </div>
        <div class="form-group">
          <div class="invalid-feedback d-block">
            <%= error.password ? error.password : ''%>
          </div>
          <input
            type="text"
            name="password"
            class="form-control"
            placeholder="Password"
            style="<%= error.password || error.invalidLogin ? 'border-color: #dc3545' : ''%>"
          />
        </div>
        <div class="form-group d-flex justify-content-between">
          <div class="custom-control custom-checkbox">
            <input
              type="checkbox"
              name="rememberLogin"
              class="custom-control-input"
              id="customCheck1"
              onclick="val()"
            />
            <label class="custom-control-label" for="customCheck1"
              >Remember me</label
            >
          </div>
          <a href="/auth/reset">Reset password</a>
        </div>
        <button class="btn btn-primary btn-block">Sign in</button>
        <hr />
        <p class="text-black-50">Can't login?</p>
        <a
          href="mailto:<%= process.env.ADMIN_EMAIL %>"
          class="btn btn-outline-light btn-sm text-black-50"
          >Contact admin</a
        >
      </form>
      <!-- ./ form -->
    </div>

    <!-- Plugin scripts -->
    <script src="<%= process.env.CDN %>vendors/bundle.js"></script>

    <!-- App scripts -->
    <script src="<%= process.env.CDN %>assets/js/app.min.js"></script>
    <script>
      function val() {
        let chck = document.querySelector('input[type="checkbox"]');
        if (chck.checked) {
          chck.value = "true";
          console.log(chck.value);
        } else {
          chck.value = "false";
          console.log(chck.value);
        }
      }
      console.log(document.querySelector('input[type="checkbox"]'));
    </script>
  </body>
</html>

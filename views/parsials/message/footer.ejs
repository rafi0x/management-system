<!-- Plugin scripts -->
<script src="<%= process.env.CDN %>vendors/bundle.js"></script>

<!-- App scripts -->
<script src="<%= process.env.CDN %>assets/js/app.min.js"></script>
<script>
  $(function () {
    $(document).on(
      "click",
      ".chat-block .chat-sidebar .chat-sidebar-content .chat-lists a",
      function () {
        var chat_content = $(".chat-block .chat-content");

        // Open chat screen
        chat_content.addClass("mobile-open");

        // Scroll resize
        chat_content
          .find(".messages")
          .scrollTop(chat_content.find(".messages").get(0).scrollHeight, -1)
          .niceScroll({
            horizrailenabled: false,
          })
          .resize();

        return false;
      }
    );
  });
</script>
